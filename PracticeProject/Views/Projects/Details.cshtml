@model PracticeProject.ViewModels.Projects.ProjectViewModel

@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-5" style="max-width: 720px;">

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <h2 class="fw-bold mb-3">Project Details</h2>

            <div class="mb-3">
                <span class="text-muted small">Title</span>
                <h5 class="fw-semibold">@Model.Title</h5>
            </div>

            <div class="mb-4">
                <span class="text-muted small">Description</span>
                <p class="mb-0">
                    @(string.IsNullOrWhiteSpace(Model.Description)
                                        ? "No description provided."
                                        : Model.Description)
                </p>
            </div>
            <h3>Tasks</h3>

            @if (!Model.Tasks.Any())
            {
                <p>No tasks for this project.</p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Due Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.Tasks)
                        {
                            <tr>
                                <td>@task.Title</td>
                                <td>@task.Status</td>
                                <td>@task.Priority</td>
                                <td>@task.DueDate.ToShortDateString()</td>
                                <td>
                                    <a asp-controller="Tasks"
                                       asp-action="Details"
                                       asp-route-id="@task.Id">
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Back
                </a>
            </div>

        </div>
    </div>
</div>
