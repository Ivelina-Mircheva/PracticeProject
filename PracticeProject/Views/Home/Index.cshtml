@{
    ViewData["Title"] = "Home";
    bool isAuthenticated = User.Identity?.IsAuthenticated ?? false;
}

<div class="container mt-5">

    @if (!isAuthenticated)
    {
        <!-- ================= HOME BEFORE LOGIN ================= -->
        <div class="row align-items-center mb-5 pb-4">
            <div class="col-md-6">
                <h1 class="display-5 fw-bold">Practice Project</h1>
                <p class="lead">
                    Plan projects, assign tasks, and track your team’s progress – all in one place.
                </p>

                <div class="d-flex gap-2">
                    <a href="/Identity/Account/Login"
                       class="btn btn-outline-secondary btn-lg">
                        Browse Projects
                    </a>
                    <a href="/Identity/Account/Register"
                       class="btn btn-primary btn-lg">
                        Register
                    </a>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/906/906334.png"
                     class="img-fluid"
                     style="max-height: 300px;"
                     alt="Task management">
            </div>
        </div>

        <!-- Cards -->
        <div class="row g-5 mb-4 text-center justify-content-center">

            <div class="col-md-4 px-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Projects</h5>
                        <p class="card-text">
                            Create and manage projects with a clear structure.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4 px-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Tasks</h5>
                        <p class="card-text">
                            Assign tasks and track deadlines and priorities.
                        </p>
                    </div>
                </div>
            </div>

        </div>

        <!--Actions -->
        <div class="text-center mt-5">
            <h3 class="fw-semibold">Ready to get started?</h3>
            <p class="text-muted">
                Organize your work more efficiently starting today.
            </p>
            <a class="btn btn-success btn-lg"
               href="/Identity/Account/Register">
                Create an account
            </a>
        </div>
    }
    else
    {
        <!-- ================= LOGGED-IN DASHBOARD ================= -->
        <div class="row align-items-center mb-5 pb-4">
            <div class="col-md-6">
                <h1 class="display-5 fw-bold">
                    Welcome back!
                </h1>
                <p class="lead text-muted">
                    Continue working on your projects and tasks
                </p>

                <div class="d-flex gap-2 mt-3">
                    <a asp-controller="Projects"
                       asp-action="Create"
                       class="btn btn-primary btn-lg">
                        Create Project
                    </a>
                    <a asp-controller="Projects"
                       asp-action="Index"
                       class="btn btn-outline-secondary btn-lg">
                        My Projects
                    </a>
                </div>
            </div>

            <div class="col-md-6 text-center">
                <img src="https://cdn-icons-png.freepik.com/512/7412/7412637.png"
                     class="img-fluid"
                     style="max-height: 300px;"
                     alt="Project dashboard">
            </div>
        </div>

        <!-- Quick actions -->
        <div class="row g-4 mb-4 text-center justify-content-center">
            <div class="col-md-4 px-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Projects</h5>
                        <p class="card-text text-muted">
                            View and manage all your projects.
                        </p>
                        <a asp-controller="Projects"
                           asp-action="Index"
                           class="btn btn-outline-primary btn-sm">
                            Go to Projects
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-4 px-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Tasks</h5>
                        <p class="card-text text-muted">
                            Track and complete your project tasks.
                        </p>
                        <a asp-controller="Tasks"
                           asp-action="Index"
                           class="btn btn-outline-secondary btn-sm">
                            Go to Tasks
                        </a>
                    </div>
                </div>
            </div>

        </div>

        <div class="card border-0 bg-light">
            <div class="card-body">
                <h6 class="fw-semibold mb-1">Tip</h6>
                <p class="text-muted mb-0">
                    Keep your projects and tasks up to date to track progress more easily.
                </p>
            </div>
        </div>
    }
</div>
