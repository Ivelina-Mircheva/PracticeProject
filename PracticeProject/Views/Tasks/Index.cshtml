@model IEnumerable<PracticeProject.ViewModels.Tasks.TaskViewModel>

@{
    ViewData["Title"] = "My Tasks";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Tasks</h2>
        <a asp-action="Create" class="btn btn-primary">Create Task</a>
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Title</th>
                <th>Due Date</th>
                <th>Priority</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.DueDate.ToShortDateString()</td>
                    <td>@task.Priority</td>
                    <td>@task.Status</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
