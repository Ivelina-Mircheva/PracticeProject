@model PracticeProject.ViewModels.Tasks.TaskViewModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="fw-bold">@Model.Title</h3>
            <p class="text-muted">@Model.Description</p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Due Date:</strong> @Model.DueDate.ToShortDateString()</li>
                <li class="list-group-item"><strong>Priority:</strong> @Model.Priority</li>
                <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
            </ul>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <button type="button"
                        onclick="history.back()"
                        class="btn btn-outline-secondary">
                    Back
                </button>

            </div>
        </div>
    </div>
</div>
